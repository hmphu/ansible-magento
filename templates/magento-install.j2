  --use_rewrites "{{ magento_config.use_rewrites | default('yes')}}" \
  --use_secure "{{ magento_config.use_secure | default('yes') }}" \
  --secure_base_url "{{ magento_config.secure_base_url |default('https://localhost:8080/') }}" \
  --encryption_key "{{ magento_config.encryption_key | default() }}" \
  --use_secure_admin "{{ magento_config.use_secure_admin| default('yes') }}" \
  --admin_firstname "{{ magento_config.admin_firstname | default('Magento') }}" \
  --admin_lastname "{{ magento_config.admin_lastname | default('Admin')}}" \
  --admin_email "{{ magento_config.admin_email | default('magento@test.de')}}" \
  --admin_username "{{ magento_config.admin_username | default('admin') }}"  \
  --admin_password "{{ magento_config.admin_password | default('magento12')  }}" 
  
