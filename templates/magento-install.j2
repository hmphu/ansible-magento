#!/bin/bash

/usr/bin/php -f {{ magento_root }}/install.php -- \
  --license_agreement_accepted "{{ magento_config.license_agreement_accepted| default('yes') }}" \
  --locale "{{ magento_config.locale | default ('de_DE') }}" \
  --timezone "{{ magento_config.timezone | default('Europe/Berlin') }}"  \
  --default_currency "{{ magento_config.default_currency | default('EUR') }}" \
  --db_host "{{ magento_config.db_host | default('localhost') }}" \
  --db_name "{{ magento_config.db_name | default('magento') }}" \
  --db_user "{{ magento_config.db_user | default('magento') }}" \
  --db_pass "{{ magento_config.db_pass | default('magento') }}" \
  --url "{{ magento_config.url |default('http://localhost:8080/') }}" \
